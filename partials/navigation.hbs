<!-- <div class="nav {{#if @blog.cover}} covered" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}" id="nav"> -->
<div class="nav" id="nav">
  <div class="blog-owner">
    <div class="blog-logo">
      {{#if @blog.logo}}
      <a class="blog-logo-link" href="{{@blog.url}}">
        <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
      </a>
      {{/if}}
    </div>
    <div class="blog-desc">
      <h1 class="page-title">{{@blog.title}}</h1>
      <p class="page-description">{{@blog.description}}</p>
    </div>
  </div>
  <nav class="menu">
    <!-- <a href="#" class="nav-close">
      <span class="hidden">Close</span>
    </a> -->
    <ul>
      {{#foreach navigation}}
      <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
      {{/foreach}}
    </ul>
  </nav>
  <div class="social">
    {{#if @labs.subscribers}}
    <a class="subscribe-button" href="{{@blog.url}}/subscribe/"><span class="entypo-mail"></span></a>
    {{/if}}
    <a class="rss-feed" href="{{@blog.url}}/rss/"><span class="entypo-rss"></span></a>
    {{#if @blog.facebook}}
    <a class="twitter" href="{{facebook_url}}" target="_blank"><span class="entypo-facebook-squared"></span></a>
    {{/if}}
    {{#if @blog.twitter}}
    <a class="facebook" href="{{twitter_url}}" target="_blank"><span class="entypo-twitter"></span></a>
    {{/if}}
  </div>

  {{!-- The tiny footer at the very bottom --}}
  <footer class="site-footer clearfix">
      <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
      <section class="poweredby">Proudly published with <a href="https://ghost.org">Ghost</a>.</section>
  </footer>

</div>
