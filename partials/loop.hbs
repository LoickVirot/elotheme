{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}} card article">
  <header class="post-header">
    {{# if image}}
    <a class="post-image-wrapper" href="{{url}}">
      <img src="{{image}}" alt="post_image" class="post-image">
    </a>
    {{/if}}
    <div class="card-header">
      <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
      <div class="post-meta">
        <div class="post-date">
          <span class="entypo-calendar"></span>
          <time datetime="{{date format="YYYY-MM-DD"}}"> {{date format="DD/MM/YYYY"}}</time>
        </div>
        {{#if tags}}
        <div class="post-tags">
          <span class="entypo-tag"></span> {{tags}}
        </div>
        {{/if}}
      </div>
    </div>
  </header>
  <div class="card-body">
    <section class="post-excerpt">
      <p>{{excerpt words="30"}}... <a class="read-more" href="{{url}}">Lire la suite</a></p>
    </section>
  </div>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
<div class="extra-pagination inner card">
    <div class="card-body">
      {{#if pagination.prev}}
        <a class="newer-posts" href="{{page_url pagination.prev}}">&larr; Précédent</a>
      {{/if}}
      <span class="page-number">Page {{pagination.page}} sur {{pagination.pages}}</span>
      {{#if pagination.next}}
          <a class="older-posts" href="{{page_url pagination.next}}">Suivant &rarr;</a>
      {{/if}}
    </div>
</div>
