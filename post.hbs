{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
the {{{body}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<main class="content" role="main">
  <article class="{{post_class}} card article">
    <header class="post-header">
      {{# if image}}
      <div class="post-image-wrapper">
        <img src="{{image}}" alt="post_image" class="post-image">
      </div>
      {{/if}}
      <div class="card-header">
        <h1 class="post-title">{{title}}</h1>
        <div class="post-meta">
          <div class="post-date">
            <span class="entypo-calendar"></span>
            <time datetime="{{date format="YYYY-MM-DD"}}"> {{date format="DD/MM/YYYY"}}</time>
          </div>
          {{#if tags}}
          <div class="post-tags">
            <span class="entypo-tag"></span> {{tags}}
          </div>
          {{/if}}
        </div>
      </div>
    </header>

    <section class="post-content card-body">
      {{content}}

      <footer class="post-footer">
        <section class="share">
          <h2>Partager</h2>
          <a class="icon icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <span class="entypo-twitter"></span> Twitter</a>

          <a class="icon icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          <span class="entypo-facebook-squared"></span> Facebook</a>

          <a class="icon icon-google" href="https://plus.google.com/share?url={{url absolute="true"}}"
          onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          <span class="entypo-google-circles"></span> Google+</a>
        </section>

      {{!-- Email subscribe form at the bottom of the page --}}
        {{#if @labs.subscribers}}
        <section class="gh-subscribe">
          <h3 class="gh-subscribe-title">S'abonner !</h3>
          <p>
            Soyez au courant des derniers articles qui sortent <b><a href="{{@blog.url}}/subscribe/">directement par mail</a></b>
            ou en vos abonnant <b><a href="{{@blog.url}}/rss/">au flux RSS</a></b>
          </p>
        </section>
        {{/if}}

      </footer>
    </section>
  </article>
</main>

{{!-- Links to Previous/Next posts --}}
<aside class="read-next">
  {{#prev_post}}
  <section class="post card">
    <div class="card-body">
      <h1>Article précédent</h1>
      <a class="read-next-story prev" href="{{url}}">
        <h2>{{title}}</h2>
      </a>
      <p>{{excerpt words="19"}}&hellip;</p>
    </div>
  </section>
  {{/prev_post}}
  {{#next_post}}
    <section class="post card">
     <div class="card-body">
       <h1>Article suivant</h1>
       <a class="read-next-story" href="{{url}}">
         <h2>{{title}}</h2>
       </a>
       <p>{{excerpt words="19"}}&hellip;</p>
     </div>
    </section>
  {{/next_post}}
</aside>

{{/post}}
